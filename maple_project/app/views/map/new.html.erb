      <div id="error_explanation">
        <h2>
          <%= pluralize(@map.errors.count, "error") %> prohibited
          this article from being saved:
        </h2>
        <ul>
          <% @map.errors.each do |attr,msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
        <p align="center"><%= link_to 'Return Back to current mappings', :back %></p>
      </div>
     <% end %>

