<div class = "jumbotron">
  <h1 align="center">Edit this System</h1>
  <%= form_for :system, url: system_path(@system), method: :patch do |f| %>

  <% if @system.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@system.errors.count, "error") %> prohibited
        this system from being saved:
      </h2>
      <ul>
        <% @system.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p align="center">
    <%= f.label :System_Name %><br>
    <%= f.text_field :System_Name%>
  </p>

  <p align="center">
    <%= f.label :System_Version %><br>
    <%= f.text_area :System_Version %>
  </p>

  <p align="center">
    <%= f.submit %>
  </p>

<% end %>
<p align="center"><%= link_to 'Back', systems_path %></p>
</div>
