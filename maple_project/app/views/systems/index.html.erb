<div class = "jumbotron">
  <h1 align="center">Systems</h1>
  <p align="center">Below is a list of all systems and its version</p>
  <table align="center" width="100%">
    <tr>
      <th>System Name</th>
      <th>System Version</th>
    </tr>
    <% @systems.each do |system| %>
    <tr>
        <td><%= system.System_Name %></td>
        <td><%= system.System_Version %></td>
        <td><%= link_to 'Show', system_path(system) %></td>
        <td><%= link_to 'Edit', edit_system_path(system) %></td>
        <td><%= link_to 'Delete', system_path(system),method: :delete,data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </table>
    <br>
    <br>
    <p align="center">
    <%= link_to 'New system', new_system_path %>
  </p>
  </div>
