<body>
<div class = "jumbotron">
  <h1 align="center">Systems List</h1>
  <p align="center"> Add, edit or delete systems. Click on a system below to view its versions.</p>
  <table  class="table table-hover" align="center" width="90%">
    <br>
    <tr>
      <td><b>Systems</b></td>
    </tr>
    <p align = "center"><%= link_to '<i class="glyphicon glyphicon-plus"></i> '.html_safe, new_system_path, class: 'btn btn-custom' %> </p>

    <% @systems.each do |system| %>

    <tr>
        <td><%= link_to system.System_Name, system_path(system)%></td>
        <td> <%= link_to '<i class="glyphicon glyphicon-pencil"></i> '.html_safe, edit_system_path(system), class: 'btn btn-custom' %>
         <%= link_to '<i class="glyphicon glyphicon-trash"></i> '.html_safe, system_path(system),method: :delete,data: { confirm: 'Are you sure?' }, class: 'btn btn-custom' %> </td>
      </tr>
      <% end %>

    </table>
    <br>
    <br>

    <br>
    <br>
    <br>
    <p align="center">

      <!-- <%= link_to "Click to view list of all Versions", version_view_path %> -->
    </p>
  </div>
</body>
