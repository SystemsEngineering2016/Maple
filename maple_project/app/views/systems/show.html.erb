<div class = "jumbotron">

    <h2 align="center">System <%= @system.System_Name %></h2>
    <p align="center">Below is a list of all versions for System "<%= @system.System_Name %>"</p>
    <table align="center" width="80%">
      <br>
      <tr>
        <th>System</th>
        <th>Version</th>
        <th>Version Created at</th>
        <th>Verison Updated at</th>
      </tr>
      <% @system.versions.each do |version| %>
        <tr>
            <td><%= @system.System_Name %></td>
            <td><%= version.Version_Name %></td>
            <td><%= version.created_at %></td>
            <td><%= version.updated_at %></td>
            <td><%= link_to 'Delete Version', [version.system, version],method: :delete,data: { confirm: 'Are you sure?' } %></td>

        </tr>
      <% end %>
    </table>
    <br>
    <br>


    <!-- <h2 align="center">Add a new version to system <%= @system.System_Name %> below</h2>
    <%= render 'versions/form' %>
    <br> -->

    <p align="center">
      <%= link_to 'Systems list', systems_path %> |
      <%= link_to 'Edit System Name', edit_system_path(@system) %> |
      <!-- <%= link_to 'Show Versions', system_version_path(@system) %> | -->
      <%= link_to 'Create New Version', new_system_version_path(@system) %> |
    </p>
</div>
