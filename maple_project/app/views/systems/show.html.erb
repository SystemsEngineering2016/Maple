<body>

<div class = "jumbotron">

    <h1 align="center">Versions of "<%= best_in_place @system, :System_Name %> "</h2>

    <p align="center"> Add, edit or delete versions for "<%= @system.System_Name %>". Click on a version below to view its data points.</p>
    <table class="table table-hover"align="center" width="80%">
      <br>
      <tr>
      </tr>
      <p align = "center"><%= link_to '<i class="glyphicon glyphicon-plus"></i> '.html_safe, new_system_version_path(@system), class: 'btn btn-custom' %> </p>

      <% @system.versions.each do |version| %>
        <tr>
            <td><%= link_to version.Version_Name,  version_path(version)%></td>
            <td> <%= link_to '<i class="glyphicon glyphicon-edit"></i> '.html_safe, edit_version_path(version), class: 'btn btn-custom' %>
            <%= link_to '<i class="glyphicon glyphicon-trash"></i> '.html_safe, version_path(version),method: :delete,data: { confirm: 'Are you sure?' } , class: 'btn btn-custom' %> </td>


        </tr>
      <% end %>
    </table>

    <br>
    <br>


    <!-- <h2 align="center">Add a new version to system <%= @system.System_Name %> below</h2>
    <%= render 'versions/form' %>
    <br> -->
</div>
</body>
