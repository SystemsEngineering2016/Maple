<div class = "jumbotron">
  <h1 align="center">Create a new version</h1>
  <p align="center">Select from the systems below to create a new version of it</p>
  <br>
  <table align="center" width="50%" >
    <br>
    <tr>
      <th>System Name</th>
    </tr>
    <% System.all.each do |system| %>
    <tr>
        <td><%= system.System_Name %></td>
        <td><%= link_to 'View Versions', system_path(system) %></td>
        <td><%= link_to 'Create New Version', system_path(system) %></td>
      </tr>
      <% end %>
    </table>
</div>
