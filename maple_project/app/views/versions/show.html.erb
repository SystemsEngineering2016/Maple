<body>

<div class = "jumbotron">
  <h1 align="center">Data Point Display</h1>

  <table align="center" style="width:50%">
  <tr>
    <td><b>System:</b>...</td>
    <td><b>Version:</b> <%= @version.Version_Name %></td>
  </tr>
</table>
</br>


  <table class="table table-hover" align="center" width="80%">
    <br>
    <tr>
      <th>Table name</th>
      <th>Column name</th>
      <th>Data type</th>
      <th>Display Width</th>
      <th>Display Height</th>
      <th>Display Prompt</th>
      <th>Display_Short_Prompt</th>
      <th>Implementation Comment</th>

    </tr>
    <% @version.table.each do |table| %>
      <tr>
          <td> <%= best_in_place table, :Table_Name %> </td>
          <td> <%= best_in_place table, :Column_Name %> </td>
          <td> <%= best_in_place table, :Data_Type %> </td>
          <td> <%= best_in_place table, :Display_Width %> </td>
          <td> <%= best_in_place table, :Display_Height %> </td>
          <td> <%= best_in_place table, :Display_Prompt %> </td>
          <td> <%= best_in_place table, :Display_Short_Prompt %> </td>
          <td> <%= best_in_place table, :Implementation_Comment %> </td>




          <!-- <td><%= link_to 'Delete Data Point', table_path(table),method: :delete,data: { confirm: 'Are you sure?' } %></td> -->

          <td><%= link_to '<i class="glyphicon glyphicon-trash"></i> '.html_safe, table_path(table),method: :delete,data: { confirm: 'Are you sure?' }, class: 'btn btn-custom' %> </td>
      </tr>
    <% end %>
  </table>

  <%= render "tables/form2", :version => @version %>



<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Modal Header</h4>
      </div>
      <div class="modal-body">
        <%= render "tables/form", :version => @version %>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>


  <br>
  <br>
  <p align="center">
    <%= link_to 'Add a New Data Point', new_version_table_path(@version) %>

  </p>


</div>
</body>
